<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_active_contract"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contract_details_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Contract Details"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employer_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employer Name:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employer_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employer Email:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employee_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Name:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employee_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Email:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/employee_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/pay_rate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Rate:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/pay_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/work_zone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Zone:"
            android:textSize="16sp"
            android:padding="8dp" />

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/payout_interval_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payout Interval:"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/payout_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/geofencing_status_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geofencing Status:"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:padding="8dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/geofencing_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outside Work Zone"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>
</ScrollView>
