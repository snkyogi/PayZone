<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#443266"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/contract_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contract Name"
                android:textColor="#F1F0FF"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingBottom="4dp" />
            <TextView
                android:id="@+id/contract_status"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:text="Status: Active"

                android:textColor="#F1F0FF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/contractor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contractor Name"
            android:textColor="#F1F0FF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contract_costing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costing: $0.00/hr"
                android:textColor="#F1F0FF"
                android:layout_weight="1"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/contract_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F1F0FF"
                android:layout_weight="0"
                android:text="Expiry: 01/01/2024"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


